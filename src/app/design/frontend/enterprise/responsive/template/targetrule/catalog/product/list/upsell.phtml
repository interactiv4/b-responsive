?>
<?php if ($this->hasItems()): ?>
<div class="box-collateral panel panel-info">
    <div class="panel-heading">
        <h2 class="panel-title"><?php echo $this->__('You may also be interested in the following product(s)') ?></h2>
    </div>
    <div class="panel-body">
        <?php $i=0; foreach ($this->getItemCollection() as $_item): ?>
            <?php if ($i++ % $this->getColumnCount() == 0): ?>
                <ul class="row">
            <?php endif ?>
                    <li class="col-xs-3 col-md-3 item<?php if (($i - 1) % $this->getColumnCount() == 0):?> first<?php elseif ($i % $this->getColumnCount() == 0):?> last<?php endif;?>">
                        <?php
                            $itemBlock = $this->getChild('catalog.product.upsell.item')->setItem($_item)->setPosition($i);
                            echo $itemBlock->toHtml();
                        ?>
                    </li>
            <?php if ($i % $this->getColumnCount() == 0 || $i == $this->getItemsCount()): ?>
                </ul>
            <?php endif ?>
        <?php endforeach; ?>
        <script type="text/javascript">decorateGeneric($$('ul.products-grid'), ['odd','even','first','last'])</script>
    </div>
</div>
<?php endif ?>
