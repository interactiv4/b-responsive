/**
 * Customer login form template
 *
 * @see Mage_Customer_Block_Form_Login
 */
?>
<div class="account-login<?php if (!$this->helper('customer')->isRegistrationAllowed()) echo ' login-only' ?>">
    <div class="page-title">
        <h1><?php if ($this->helper('customer')->isRegistrationAllowed()): ?>
            <?php echo $this->__('Login or Create an Account') ?>
            <?php else: ?>
            <?php echo $this->__('Login'); ?>
            <?php endif; ?></h1>
    </div>
    <?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
    <form action="<?php echo $this->getPostActionUrl() ?>" method="post" id="login-form" role="form">
        <div class="fieldset">
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <div class="panel panel-default">
                        <div class="panel-heading"><h2 class="panel-title"><?php echo $this->__('Registered Customers') ?></h2></div>
                        <div class="panel-body">
                            <p><?php echo $this->__('If you have an account with us, log in using your email address.') ?></p>
                            <ul>
                                <li class="form-group">
                                    <label for="email" class="required"><em>*</em><?php echo $this->__('Email Address') ?></label>
                                    <input name="login[username]" value="<?php echo $this->htmlEscape($this->getUsername()) ?>" id="email" type="text" class="form-control required-entry validate-email" title="<?php echo $this->__('Email Address') ?>" />
                                </li>
                                <li class="form-group">
                                    <label for="pass" class="required"><em>*</em><?php echo $this->__('Password') ?></label>
                                    <input name="login[password]" type="password" class="form-control required-entry validate-password" id="pass" title="<?php echo $this->__('Password') ?>" />
                                </li>
                            </ul>
                            <div class="form-group a-right">
                                <a class="btn btn-link pull-left" href="<?php echo $this->getForgotPasswordUrl() ?>"><?php echo $this->__('Forgot Your Password?') ?></a>
                                <button type="submit" class="btn btn-primary" name="send" id="send2"><span><span><?php echo $this->__('Login') ?></span></span></button>
                            </div>
                            <p class="required pull-right"><?php echo $this->__('* Required Fields') ?></p>
                        </div>
                    </div>
                </div>
                <?php if ($this->helper('customer')->isRegistrationAllowed()): ?>
                <div class="col-xs-12 col-md-6">
                    <div class="panel panel-default">
                        <div class="panel-heading"><h2 class="panel-title"><?php echo $this->__('New Customers') ?></h2></div>
                        <div class="panel-body">
                            <p><?php echo $this->__('By creating an account with our store, you will be able to move through the checkout process faster, store multiple shipping addresses, view and track your orders in your account and more.') ?></p>
                            <div class="form-group a-right">
                                <button type="button" class="btn btn-primary" onclick="window.location='<?php echo $this->getCreateAccountUrl() ?>';"><span><span><?php echo $this->__('Register') ?></span></span></button>
                            </div>
                        </div>
                    </div>
                </div>
                <?php endif; ?>
            </div>
        </div>
    </form>
