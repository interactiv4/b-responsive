<div class="panel panel-default">
<?php $_orders = $this->getOrders(); ?>
    <div class="panel-heading">
        <h2 class="panel-title"><?php echo $this->__('Recent Orders') ?><?php if( sizeof($_orders->getItems()) > 0 ): ?> <a class="pull-right font12 color-primary" href="<?php echo $this->getUrl('sales/order/history') ?>"><?php echo $this->__('View All') ?></a><?php endif; ?></h2>
    </div>
    <div class="panel-body">
        <?php echo $this->getChildHtml()?>
    <?php if( sizeof($_orders->getItems()) > 0 ): ?>
        <div class="table-responsive">
            <table class="table table-hover table-condensed" id="my-orders-table">
            <col width="1" />
            <col width="1" />
            <col width="1" />
            <col width="1" />
            <col width="1" />
                <thead>
                    <tr>
                        <th><?php echo $this->__('Order #') ?></th>
                        <th><?php echo $this->__('Date') ?></th>
                        <th><?php echo $this->__('Ship To') ?></th>
                        <th><span class="nobr"><?php echo $this->__('Order Total') ?></span></th>
                        <th><?php echo $this->__('Status') ?></th>
                    </tr>
                </thead>
                <tbody class="font12">
                    <?php foreach ($_orders as $_order): ?>
                        <tr>
                            <td><a href="<?php echo $this->getViewUrl($_order) ?>"><?php echo $_order->getRealOrderId() ?></a></td>
                            <td><span class="nobr"><?php echo $this->formatDate($_order->getCreatedAtStoreDate()) ?></span></td>
                            <td><?php echo $_order->getShippingAddress() ? $this->htmlEscape($_order->getShippingAddress()->getName()) : '&nbsp;' ?></td>
                            <td><?php echo $_order->formatPrice($_order->getGrandTotal()) ?></td>
                            <td><em><?php echo $_order->getStatusLabel() ?></em></td>
                        </tr>
                    <?php endforeach; ?>
                </tbody>
            </table>
        </div>
        <script type="text/javascript">decorateTable('my-orders-table')</script>
    <?php else: ?>
        <p><?php echo $this->__('You have placed no orders.'); ?></p>
    <?php endif; ?>
    </div>
</div>
