<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
<form action="<?php echo $this->getSendUrl() ?>" id="form-validate" method="post">
    <div class="row">
        <div class="col-xs-12 col-md-6 col-md-offset-6 col-md-pull-6">
