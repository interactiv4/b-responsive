/**
 * Cart cross sell items template
 *
 * @see Mage_Checkout_Block_Cart_Crosssell
 */
?>
<?php if($this->getItemCount()): ?>
<div class="panel panel-info panel-crosssell">
    <div class="panel-heading">
        <div class="panel-title"><?php echo $this->__('Based on your selection, you may be interested in the following items:') ?></div>
    </div>
    <div class="panel-body">
        <ul id="crosssell-products-list">
        <?php foreach ($this->getItems() as $_item): ?>
            <li class="item col-xs-4 col-md-3">
                <a class="product-image" href="<?php echo $_item->getProductUrl() ?>" title="<?php echo $this->escapeHtml($_item->getName()) ?>"><img src="<?php echo $this->helper('catalog/image')->init($_item, 'thumbnail')->resize(150); ?>" width="150" height="150" alt="<?php echo $this->escapeHtml($_item->getName()) ?>" class="img-thumbnail" /></a>
                <div class="product-shop">
                    <h3 class="product-name"><a href="<?php echo $_item->getProductUrl() ?>"><?php echo $this->escapeHtml($_item->getName()) ?></a></h3>
                    <?php echo $this->getPriceHtml($_item, true) ?>
                    <button type="button" title="<?php echo $this->__('Add to Cart') ?>" class="btn btn-success" onclick="setLocation('<?php echo $this->getAddToCartUrl($_item) ?>')"><span><span><?php echo $this->__('Add to Cart') ?></span></span></button>
                    <ul class="add-to-links">
                        <?php if ($this->helper('wishlist')->isAllow()) : ?>
                            <li><a href="<?php echo $this->getAddToWishlistUrl($_item) ?>" class="btn btn-link font12"><span class="glyphicon glyphicon-heart"></span><?php echo $this->__('Add to Wishlist') ?></a></li>
                        <?php endif; ?>
                        <?php if($_compareUrl=$this->getAddToCompareUrl($_item)): ?>
                            <li><span class="separator">|</span> <a href="<?php echo $_compareUrl ?>" class="btn btn-link font12"><span class="glyphicon glyphicon-transfer"></span><?php echo $this->__('Add to Compare') ?></a></li>
                        <?php endif; ?>
                    </ul>
                </div>
            </li>
        <?php endforeach; ?>
        </ul>
        <script type="text/javascript">decorateList('crosssell-products-list', 'none-recursive')</script>
    </div>
</div>
<?php endif; ?>
