/**
 * Template for filter items block
 *
 * @see Mage_Catalog_Block_Layer_Filter
 */
?>


<?php foreach ($this->getItems() as $_item): ?>
        <?php if ($_item->getCount() > 0): ?>
        <a class="list-group-item" href="<?php echo $this->urlEscape($_item->getUrl()) ?>">
        	<span class="text"><?php echo $_item->getLabel() ?></span>

        	<?php if ($this->shouldDisplayProductCount()): ?>
	        <span class="badge"><?php echo $_item->getCount() ?></span>
	        <?php endif; ?>
        </a>
        <?php else: echo '<div class="list-group-item">'.$_item->getLabel().'</div>' ?>
        <?php endif; ?>
	        
<?php endforeach ?>

